body
	background #eee;
	font-family 'Arimo', sans-serif
	font-size: 16px
	margin 0
	padding 0
footer
	border-top: 1px solid #ccc;
	width 85%
	margin 0 auto
header
	background #380081
	/*background-image url(../img/escudo.jpg)*/
	color #eee
	margin 0
	padding 5px 0
header h1, header button
	display inline-block
	vertical-align middle
header button
	background #EBECFF
	border-radius 0px
	color #0D0F70
	padding 0
	width 96px
	margin-left 46%
#container article
	display inline-block
	margin 5px
	vertical-align top
#control-panel
	background #fff
	border-radius: 8px
	box-shadow 8px 8px 10px rgb(211,211,211,0.7)
	width 30%
	transition 1s all ease
	-webkit-transition 1s all ease
	-moz-transition 1s all ease
#control-panel fieldset
	display none
#map
	height 500px
#map-container
	border-radius: 8px
	box-shadow 8px 8px 10px rgb(211,211,211,0.7)
	width 100%
	transition 1s all ease
	-webkit-transition 1s all ease
	-moz-transition 1s all ease